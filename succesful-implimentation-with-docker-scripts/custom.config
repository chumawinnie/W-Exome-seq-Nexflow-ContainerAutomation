process {
    scratch = true  // Enable per-process temporary directories that are automatically cleaned after execution

    // Apply general settings to all processes using a regex wildcard
    withName: ".*" {
        time = 72.h  // Set a default time limit of 72 hours for all processes
    }

    // Specific configuration for the Mutect2 paired somatic variant calling process
    withName: 'NFCORE_SAREK:SAREK:BAM_VARIANT_CALLING_SOMATIC_ALL:BAM_VARIANT_CALLING_SOMATIC_MUTECT2:MUTECT2_PAIRED' {
        memory = 40.GB  // Allocate more memory for the Mutect2 process to handle large input
        cpus = 20       // Allocate more CPUs to speed up Mutect2 computation
        time = 72.h     // Extend time limit for long-running variant calling tasks
    }
}
